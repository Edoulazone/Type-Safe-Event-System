{
  "name": "type-safe-event-system",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "node --loader ts-node/esm src/tests/validate-system.ts",
    "test:middleware": "node --loader ts-node/esm src/tests/test-middleware.ts",
    "test:plugins": "node --loader ts-node/esm src/tests/test-plugins.ts",
    "test:observables": "node --loader ts-node/esm src/tests/test-observables.ts",
    "dev": "node --loader ts-node/esm src/examples/demo.ts",
    "validate": "npm run test"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0"
  }
}